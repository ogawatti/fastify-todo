{
  "name": "fastify-todo",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "scripts": {
    "lint": "eslint src",
    "test": "NODE_NO_WARNINGS=1 node --experimental-vm-modules node_modules/.bin/jest --silent",
    "start": "yarn build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "yarn run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"yarn:watch:ts\" \"yarn:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/src/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/sensible": "^6.0.0",
    "@prisma/client": "5.19.1",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.0.0",
    "fastify-plugin": "^5.0.0",
    "prisma": "^5.19.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "c8": "^10.1.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.11.1",
    "fastify-tsconfig": "^2.0.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.4.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.7.0"
  },
  "ts-standard": {
    "project": "./tsconfig.json",
    "ignore": [
      "dist"
    ]
  }
}
