{
  "type": "module",
  "name": "fastify-todo",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "pretest": "ts-standard",
    "lint": "ts-standard --fix",
    "test": "yarn build:ts && tsc -p test/tsconfig.json && FASTIFY_AUTOLOAD_TYPESCRIPT=1 node --test --loader ts-node/esm test/**/*.ts",
    "start": "yarn build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "yarn run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"yarn:watch:ts\" \"yarn:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/src/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/sensible": "^6.0.0",
    "@prisma/client": "5.19.1",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.0.0",
    "fastify-plugin": "^5.0.0",
    "prisma": "^5.19.1"
  },
  "devDependencies": {
    "@types/node": "^20.4.4",
    "c8": "^10.1.2",
    "concurrently": "^8.2.2",
    "fastify-tsconfig": "^2.0.0",
    "ts-node": "^10.4.0",
    "ts-standard": "^12.0.2",
    "typescript": "^5.2.2"
  },
  "ts-standard": {
    "project": "./tsconfig.json",
    "ignore": [
      "dist"
    ]
  }
}
